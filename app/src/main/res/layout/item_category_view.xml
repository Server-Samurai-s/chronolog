<!-- The root LinearLayout for the item_category_view layout -->
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:baselineAligned="false"
    android:gravity="center_horizontal"
    android:layout_margin="20dp">

    <!-- LinearLayout for the category summary -->
    <LinearLayout
        android:id="@+id/summaryLayout"
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:background="@drawable/rounded_background">

        <!-- LinearLayout for the category name and total duration -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="5dp">

            <!-- TextView for the category name -->
            <TextView
                android:id="@+id/categoryName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CategoryName"
                android:textColor="@color/white"
                android:fontFamily="@font/inter_extrabold"
                android:textSize="18sp"
                android:layout_margin="1dp"
                />

            <!-- TextView for the total duration of the category -->
            <TextView
                android:id="@+id/categoryTotalDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00:00"
                android:textColor="@color/white"
                android:fontFamily="@font/inter"
                android:textSize="12sp"
                android:layout_margin="1dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>