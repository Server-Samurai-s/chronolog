<?xml version="1.0" encoding="utf-8"?>
<!-- The root FrameLayout for the SettingsPage fragment -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsPage"
    android:background="@drawable/gradient_settingspage">

    <!-- LinearLayout for the 'Settings' text and profile image -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="192dp"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- TextView for the 'Settings' text -->
        <TextView
            android:id="@+id/textView9"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="130dp"
            android:text="@string/Settings"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:textStyle="bold" />

        <!-- ImageView for the profile image -->
        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_weight="1"
            android:src="@drawable/sun" />

    </LinearLayout>

    <!-- LinearLayout for the profile image -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- ImageView for the profile image -->
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="200dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="160dp"
            android:background="@drawable/profile"/>

    </LinearLayout>

    <!-- ConstraintLayout for the user details form -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="374dp"
        android:layout_height="278dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="310dp">

        <!-- TextView for the 'Full Name' label -->
        <TextView
            android:id="@+id/textViewFullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/inter_extrabold"
            android:text="Full Name:"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- EditText for the 'Full Name' input -->
        <EditText
            android:id="@+id/editTextFullName"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/custom_input"
            android:ems="15"
            android:fontFamily="@font/inter"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:text="Full Name"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewFullName" />

        <!-- TextView for the 'Email' label -->
        <TextView
            android:id="@+id/textViewEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/inter_extrabold"
            android:text="Email:"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextFullName" />

        <!-- EditText for the 'Email' input -->
        <EditText
            android:id="@+id/editEmail"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/custom_input"
            android:ems="15"
            android:fontFamily="@font/inter"
            android:inputType="textEmailAddress"
            android:paddingLeft="10dp"
            android:text="Email"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewEmail" />

        <!-- TextView for the 'Password' label -->
        <TextView
            android:id="@+id/textViewPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/inter_extrabold"
            android:text="Password: "
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editEmail" />

        <!-- EditText for the 'Password' input -->
        <EditText
            android:id="@+id/editPassword"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/custom_input"
            android:ems="15"
            android:fontFamily="@font/inter"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:text="Password"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewPassword" />

        <!-- ImageButton for the 'Password' editor -->
        <ImageButton
            android:id="@+id/passwordEditor"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="114dp"
            android:layout_marginEnd="44dp"
            android:background="@android:color/transparent"
            android:src="@drawable/edit_3_svgrepo_com"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fullnameEditor" />

        <!-- ImageButton for the 'Full Name' editor -->
        <ImageButton
            android:id="@+id/fullnameEditor"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="57dp"
            android:layout_marginEnd="44dp"
            android:background="@android:color/transparent"
            android:src="@drawable/edit_3_svgrepo_com"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- LinearLayout for the 'Log Out' and 'Update Details' buttons -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="610dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <!-- Button for 'Log Out' -->
        <Button
            android:id="@+id/signupBtn"
            android:layout_width="175dp"
            android:layout_height="40dp"
            android:background="@drawable/custom_button"
            android:text="Log Out"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:fontFamily="@font/inter_extrabold"/>

        <!-- Space for separating the buttons -->
        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="25dp"/>

        <!-- Button for 'Update Details' -->
        <Button
            android:id="@+id/updateBtn"
            android:layout_width="175dp"
            android:layout_height="40dp"
            android:background="@drawable/custom_button"
            android:text="Update Details"
            android:textColor="@color/white"
            android:gravity="center" />

    </LinearLayout>

</FrameLayout>