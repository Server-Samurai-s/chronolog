<?xml version="1.0" encoding="utf-8"?>
<!-- The root RelativeLayout for the HomePageActivity fragment -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pages.HomePageActivity"
    android:background="@drawable/background">

    <!-- LinearLayout for the 'Statistics' text and 'Duration Per Category' text -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- LinearLayout for the 'Statistics' text -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_gravity="start">

            <!-- TextView for the 'Statistics' text -->
            <TextView
                android:id="@+id/border"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_extrabold"
                android:text="Statistics"
                android:textColor="@color/white"
                android:textSize="34sp" />

            <!-- TextView for the 'Duration Per Category' text -->
            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter"
                android:text="Duration Per Category"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />


        </LinearLayout>

        <!-- LinearLayout for the filter button and date range selection -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp">

            <!-- ImageButton for the filter button -->
            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:src="@drawable/filter_button"
                android:background="@null" />

            <!-- TextView for the date range selection -->
            <TextView
                android:id="@+id/statsDateRangeTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/date_button"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/inter"
                android:hint="Select date range"
                android:inputType="none"
                android:padding="2dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="12sp" />


        </LinearLayout>


        <!-- LinearLayout for the RecyclerView -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- RecyclerView for displaying the statistics -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/categoryRecyclerView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>



    </LinearLayout>

</RelativeLayout>